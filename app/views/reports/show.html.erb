<h1><%= @report.user.name %>の日報</h1>
日付<%= @report.report_date %><br>
タイトル：<%= @report.title %><br>
内容：<%= @report.content %><br>
<% if current_user?(@report.user) %>
<%= link_to '編集', edit_report_path %>   <%= link_to '削除', @report, method: :delete,
            data: { confirm: "削除しますか？" } %><br>
<% end %>
<!-- コメントとコメントフォーム -->
<% @comments.each do |comment| %>
  <div>
  ユーザー名：<%= comment.report.user.name %>
  コメント：<%= comment.content %><br>
  </div>
<% end %>