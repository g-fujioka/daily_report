<% provide(:title, t('activerecord.models.user')) %>
<h1><%= @user.name %></h1>
<div class="container">
  <table class="table">
    <tr><td><%= t('activerecord.attributes.user.email') + " : " + @user.email %></td></tr>
    <tr><td><%= t('activerecord.models.department') + " : " + @user.department.department_name %></td></tr>
    <% if current_user?(@user) || admin_user?(current_user) %>
        <td><%= link_to t('helpers.submit.edit'), edit_user_path(@user) %></td>
    <% end %>

    <!-- 管理者のみ表示する処理 -->
    <% if admin_user?(current_user) && !(current_user?(@user)) %>
        <td><%= link_to t('helpers.submit.delete'), @user, method: :delete, data: { confirm: t('info.delete?') } %></td>
    <% end %>

  </table>
</div>



