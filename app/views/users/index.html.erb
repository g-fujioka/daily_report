<% provide(:title, t('title.users')) %>
<h1><%= t('title.users') %></h1>

<%= will_paginate @users, :previous_label => t('paginate.previous'), :next_label => t('paginate.next') %>

<ul class="users">
  <% @users.each do |user| %>
    <%=link_to user.name + '(' + user.department.department_name + ')', user_path(user) %><br>
  <% end %>
</ul>


<% if admin_user?(current_user) %>
  <%= link_to t('button.new'), new_user_path, class: "btn btn-lg btn-primary" %>
<% end %>

<%= will_paginate @users, :previous_label => t('paginate.previous'), :next_label => t('paginate.next') %>
