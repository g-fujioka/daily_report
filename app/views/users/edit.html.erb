<% provide(:title, 'Edit user') %>
<% provide(:button_text, '更新する') %>
<h1>Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'form', {f: f} %>
    <% end %>
  </div>
</div>

<table border="1">
  <tr><th>部署ID</th><th>部署名</th></tr>
  <% @departments.each do |department| %>
  <tr>
    <td><%= department.id %></td><td><%= department.department_name %></td>
  </tr>
  <% end %>
</table>